[core]
  quotepath = false
  editor = nvim
  pager = delta
  whitespace = fix,-indent-with-non-tab,trailing-space,cr-at-eol

[interactive]
  diffFilter = delta --color-only

[delta]
  navigate = true
  syntax-theme = tokyonight_night


[merge]
  conflictstyle = diff3


[commit]
	gpgsign = true
	verbose = 1

[push]
  default = current


[diff]
  tool = difftastic
  colorMoved = default

[difftool]
  prompt = false

[difftool "difftastic"]
  cmd = difft "$LOCAL" "$REMOTE"

[difftool "jsondiff"]
	cmd = "json-diff $LOCAL $REMOTE"

[pager]
  difftool = true

[pull]
	rebase = false

[advice]
	addEmptyPathspec = false

[filter "lfs"]
	required = true
	clean = git-lfs clean -- %f
	smudge = git-lfs smudge -- %f
	process = git-lfs filter-process

[init]
	defaultBranch = main
	templatedir = ~/.git-templates

[credential "https://github.com"]
	helper = !gh auth git-credential

[credential "https://gist.github.com"]
	helper =
	helper = !gh auth git-credential
[rebase]
	autoStash = true
	autosquash = true
[fetch]
	prune = true
	pruneTags = true
	recurseSubmodules = true
[branch]
	autoSetupMerge = true
