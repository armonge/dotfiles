#!/bin/bash
#
# ~/.bash_profile
#
# shellcheck disable=SC1090

# Get the aliases and functions
if [ -f ~/.bashrc ]; then
  . ~/.bashrc
fi

# Rust/Cargo environment (sourced once here, not in bashrc)
. "$HOME/.cargo/env"

# GPG TTY - necessary for GPG to work properly
export GPG_TTY=$(tty)

# Codon compiler path (added by install script)
export PATH="$HOME/.codon/bin:$PATH"
export PATH="$PATH:$HOMEBREW_PREFIX/opt/ruby/bin:"
export PATH="/opt/homebrew/opt/openjdk/bin:$PATH"

# Added by Windsurf
export PATH="/Users/andres.monge/.codeium/windsurf/bin:$PATH"
export PATH="/opt/homebrew/opt/bison/bin:$PATH"
