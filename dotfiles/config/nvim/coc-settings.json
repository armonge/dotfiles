{
  "html.enable": true,
  "html.format.enable": true,
  "html.filetypes": ["html", "handlebars", "htmldjango"],

  "go.enable": true,
  "go.goplsOptions": {
    "completeUnimported": true
  },
  "prettier.formatterPriority": 1000,
  "coc.preferences.formatOnSaveFiletypes": [
    "yaml",
    "php",
    "xml",
    "python",
    "typescript",
    "javascript",
    "css",
    "scss",
    "html",
    "htmldjango",
    "json",
    "sh",
    "go"
  ],
  "yaml.schemas": {
    "https://raw.githubusercontent.com/armonge/serverless-yml-schema/master/serverless-schema.json": "/serverless.yml"
  },
  "yaml.customTags": ["!Ref scalar", "!GetAtt scalar", "!If sequence"],
  "languageserver": {
    "dockerfile": {
      "command": "docker-langserver",
      "filetypes": ["dockerfile"],
      "args": ["--stdio"]
    },
    "bash": {
      "command": "bash-language-server",
      "args": ["start"],
      "filetypes": ["sh"],
      "ignoredRootPaths": ["~"]
    }
  },
  "python.formatting.provider": "black",
  "python.jediEnabled": false,
  "python.linting.flake8Enabled": true,
  "python.linting.flake8Args": [
    "--ignore=E501, E203, W503, E123, E126, E128",
    "max-line-length = 88",
    "select = C,E,F,W,B,B950"
  ],

  "diagnostic.virtualText": true,
  "diagnostic.errorSign": "✘",
  "diagnostic.warningSign": "⚠",
  "diagnostic.infoSign": "i",
  "diagnostic.hintSign": "➤",
  "diagnostic-languageserver.filetypes": {
    "sh": "shellcheck"
  },
  "diagnostic-languageserver.formatFiletypes": {
    "sh": "shfmt"
  },
  "diagnostic-languageserver.formatters": {
    "shfmt": {
      "command": "shfmt",
      "args": ["-s"]
    }
  },
  "intelephense.files.exclude": ["**/vendor/**"],
  "intelephense.files.associations": ["*.php", "*.phtml", "*.module"],
  "tsserver.log": "verbose",
  "tsserver.implicitProjectConfig.checkJs": true,
  "xml.java.home": "/usr/lib/jvm/default-java/"
}
