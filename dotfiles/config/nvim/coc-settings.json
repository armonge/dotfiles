{
  "Lua.workspace.library": [
    "/usr/share/nvim/runtime/lua",
    "/usr/share/nvim/runtime/lua/vim",
    "/usr/share/nvim/runtime/lua/vim/lsp"
  ],
  "Lua.diagnostics.globals": ["vim"],
  "xml.java.home": "/usr/lib/jvm/java-11-openjdk-amd64/",
  "xml.server.vmargs": "-Xmx2048m",
  "html.format.enable": true,
  "html.filetypes": ["html"],
  "snippets.ultisnips.enable": false,
  // Fix on save
  "coc.preferences.formatOnSave": true,
  "[markdown]": {
    "coc.preferences.formatOnSave": false
  },
  "[yaml]": {
    "coc.preferences.formatOnSave": false
  },
  "yaml.schemas": {
    "https://json.schemastore.org/circleciconfig.json": "**/.circleci/config.yml.*"
  },
  "languageserver": {
    "bash": {
      "command": "bash-language-server",
      "args": ["start"],
      "filetypes": ["sh"],
      "ignoredRootPaths": ["~"]
    },
    "elmLS": {
      "trace.server": "verbose",
      "trace.server.format": "text",
      "trace.server.verbosity": "verbose",
      "command": "elm-language-server",
      "filetypes": ["elm"],
      "rootPatterns": ["elm.json"]
    },
    "intelephense": {
      "command": "intelephense",
      "args": ["--stdio"],
      "filetypes": ["php"],
      "initializationOptions": {
        "storagePath": "/tmp/intelephense"
      }
    }
  },
  // If you use neovim you can enable codelenses with this
  // "codeLens.enable": true,
  "pyright.organizeimports.provider": "isort",
  "python.sortImports.path": "~/.pyenv/versions/nvim3/bin/isort",
  "python.sortImports.args": ["--profile", "black", "--line-length", "78"],
  "python.formatting.blackPath": "~/.pyenv/versions/nvim3/bin/black",
  "python.formatting.blackArgs": ["--line-length", "78"],
  "python.formatting.darkerPath": "~/.pyenv/versions/nvim3/bin/darker",
  "python.formatting.autopep8Path": "~/.pyenv/versions/nvim3/bin/autopep8",
  "python.formatting.autopep8Args": [
    "--max-line-length",
    "78",
    "--aggresive",
    "--experimental"
  ],
  "python.formatting.yapfPath": "~/.pyenv/versions/nvim3/bin/yapf",
  "python.formatting.provider": "black",
  "python.linting.ruffEnabled": true,
  "python.linting.ruffArgs": [],
  "python.linting.enabled": true,
  "python.linting.pylintEnabled": false,
  "python.linting.flake8Enabled": true,
  "python.linting.mypyEnabled": false,
  "diagnostic.virtualText": true,
  "diagnostic-languageserver.enable": true,
  "diagnostic-languageserver.filetypes": {
    "sh": "shellcheck"
  },
  "diagnostic-languageserver.linters": {
    "shellcheck": {
      "args": ["-x", "-"]
    }
  },
  "diagnostic-languageserver.debug": true,
  "diagnostic-languageserver.formatFiletypes": {
    "sh": "shfmt"
  },
  "diagnostic-languageserver.trace.server": "verbose",
  "diagnostic-languageserver.formatters": {
    "shfmt": {
      "command": "shfmt",
      "args": ["--simplify"]
    }
  },
  "tsserver.implicitProjectConfig.checkJs": true,
  "typescript.format.enable": true,
  "javascript.format.enable": true
  // "snippets.ultisnips.pythonPrompt": false
}
