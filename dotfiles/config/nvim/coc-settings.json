{
  "html.enable": true,
  "html.format.enable": true,
  "html.filetypes": ["html", "handlebars", "htmldjango"],

  "go.enable": true,
  "go.goplsOptions": {
    "completeUnimported": true
  },

  "prettier.formatterPriority": 1000,
  "coc.preferences.formatOnSaveFiletypes": [
    "markdown",
    "graphql",
    "cs",
    "cpp",
    "yaml",
    "rust",
    "php",
    "xml",
    "python",
    "typescript",
    "typescriptreact",
    "javascript",
    "javascript.jsx",
    "css",
    "scss",
    "html",
    "htmldjango",
    "json",
    "sh",
    "go",
    "vala"
  ],

  "yaml.schemas": {
    "https://raw.githubusercontent.com/armonge/serverless-yml-schema/master/serverless-schema.json": "/serverless.yml"
  },
  "yaml.customTags": [
    "!Ref scalar",
    "!GetAtt scalar",
    "!GetAtt sequence",
    "!If sequence",
    "!Equals sequence",
    "!Select sequence",
    "!Join sequence",
    "!Split sequence",
    "!Sub sequence"
  ],

  "languageserver": {
    "ccls": {
      "command": "ccls",
      "filetypes": ["c", "cpp", "cuda", "objc", "objcpp"],
      "rootPatterns": [".ccls-root", "compile_commands.json"],
      "initializationOptions": {
        "cache": {
          "directory": ".ccls-cache"
        },
        "client": {
          "snippetSupport": true
        }
      }
    },
    "dockerfile": {
      "command": "docker-langserver",
      "filetypes": ["dockerfile"],
      "args": ["--stdio"]
    },
    "bash": {
      "command": "bash-language-server",
      "args": ["start"],
      "filetypes": ["sh"],
      "ignoredRootPaths": ["~"]
    },
    "kotlin": {
      "command": "/home/armonge/bin/kotlin-language-server/server/build/install/server/bin/kotlin-language-server",
      "filetypes": ["kotlin"]
    },
    "vala": {
      "command": "org.gnome.gvls.stdio.Server",
      "filetypes": ["vala", "genie"]
    }
  },

  "python.formatting.provider": "black",
  "python.jediEnabled": false,

  "python.linting.enabled": true,
  "python.linting.flake8Enabled": true,
  "python.linting.pydocstyleEnabled": false,
  "python.linting.mypyEnabled": true,

  "python.linting.prospectorEnabled": false,
  "python.linting.pep8Enabled": false,
  "python.linting.banditEnabled": false,
  "python.linting.pylamaEnabled": false,
  "python.linting.flake8Args": [
    "--ignore=E501, E203, W503, E123, E126, E128",
    "max-line-length = 88",
    "select = C,E,F,W,B,B950"
  ],

  "diagnostic.virtualText": true,
  "diagnostic.errorSign": "✘",
  "diagnostic.warningSign": "⚠",
  "diagnostic.infoSign": "i",
  "diagnostic.hintSign": "➤",
  "diagnostic-languageserver.filetypes": {
    "sh": "shellcheck"
  },
  "diagnostic-languageserver.debug": true,

  "diagnostic-languageserver.formatFiletypes": {
    "sh": "shfmt",
    "htmldjango": "js-beautify"
  },

  "diagnostic-languageserver.trace.server": "verbose",
  "diagnostic-languageserver.formatters": {
    "shfmt": {
      "command": "shfmt",
      "args": ["-s"]
    }
  },

  "tsserver.log": "verbose",
  "tsserver.implicitProjectConfig.checkJs": true,

  "xml.java.home": "/usr/lib/jvm/default-java/",
  "json.schemas": [
    {
      "fileMatch": ["/models/en-US.json"],
      "url": "schema.json"
    }
  ]
}
